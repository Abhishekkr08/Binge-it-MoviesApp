<script>
    console.log("hey there");
    const userList = async () => {
        try {
            let res = await fetch('https://binge-it09.herokuapp.com/api/reviews')
            let list = await res.json();
            showReveiws(list)
        }
        catch {
            console.log('failed to fetch the data from api');
        }
    }
    const review_wrapper = document.querySelector('.reviews-wrapper');

    function showReveiws(list) {
        review_wrapper.innerHTML = "";
        list.forEach((item) => {
            let name = item.username;
            let review = item.review;
            let date = item.date;
            const reviewE1 = document.createElement('div');
            reviewE1.classList.add("reviews-model");
            reviewE1.innerHTML = `<div class="user-info">
                        <div class="imgbox">
                            <img src="../images/avatar3.jpg" alt="img">
                        </div>
                        <div class="user-name">
                            <p class="special-username">${name}</p>
                            <p class="special-date">${date}</p>
                        </div>
                    </div>

                    <div class="user-review">
                        <p>‚Äú${review}‚Äù</p>
                    </div>`

            review_wrapper.appendChild(reviewE1);
            
        })
    }

    userList();

</script>


